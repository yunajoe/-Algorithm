def solution(s):
    answer = -1
    s_list = list(s)
    remove_indices = []
    new_list = []
    while True:
        for i in range(len(s_list)-1):
            if s_list[i] == s_list[i+1]:
                remove_indices.append(i)
                remove_indices.append(i+1)
                for idx, v in enumerate(s_list):
                    if idx not in remove_indices: 
                        new_list.append(s_list[idx])
                s_list = new_list
            return 0

                       
        
